{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "homepage_url": "https://beepbox.co/*",

    "background": {
        "scripts": [
          "background.js"
        ],
        "persistent": true
      },
      "browser_action": {
        "default_title": "Inject!"
      },
      "permissions": [
        "https://*/*",
        "http://*/*",
        "file:///*/*",
        "tabs"
      ],
    "manifest_version": 2
  }